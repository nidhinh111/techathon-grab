    <div class="col-9 col-md-9" style="margin-top: 2%;">
    <table class="table table-striped">
        <h3 style="text-align: center;">Rewards Configuration</h3>
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Vertical</th>
                <th scope="col">Rider Type</th>
                <th scope="col">Payroll</th>
                <th scope="col">Reward Type</th>
                <th scope="col">Reward Trigger</th>
                <th scope="col">Status</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>

            <% var i=1
             reward_details.forEach((rewards)=> { %>
            <tr>
              <th scope="row"><%= i %></th>
              <td><%= rewards.vertical %></td>
              <td><%= rewards.rider_type %></td>
              <td><%= rewards.payroll %></td>
              <td><%= rewards.reward_details[0]['reward_type']%></td>
              <td><input id="<%= rewards._id %>" onfocusout="inputFieldOnFocusOut('<%= rewards._id %>')" style="border:none" type="text" value="<%= rewards.reward_details[0]['reward_value']%>" disabled></td>
              <td><% if (rewards.active == 0) { %>Inactive <% }else{ %>Active <%}%></td>
              <td>
                  <button type="button" class="btn btn-primary btn-sm" id="edit<%= rewards._id %>" onclick="editconf('<%= rewards._id %>'); ">Edit</button>
              </td>
            </tr>
           <% i++; }) %>
          
      </tbody>
    </table>
