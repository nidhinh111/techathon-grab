    <div id="divv" class="fixed-top">

        <!-- <div class="card"> -->
        <!-- <div class="card-body"> -->
            <img src="img/dummy.jpg" width="40px" alt="" style="border-radius: 50px;">
            <div id="header">
              <label for="menu" id="head" class="lbl"><%= name %></label>
              <span id="riderId"><%= eid %></span>
            </div>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" checked>
              </div>

    </div>
    <div class="card cBody">
        <div class="card-body ">
            <h2>
My Earnings :<span class="earnings"><%= total_amount %></span></h2>
        </div>
      </div>
    <table class="table table-striped table-hover" style="margin-top: 20%;">
        <tr>
            <th>Date</th>
            <th>Amount</th>
            <th>Earnings Type</th>
          </tr>
          <% earnings.forEach(function(singleRecord) { %>
            <tr>
                <td><%= singleRecord.date %></td>
                <td><%= singleRecord.amount %></td>
                <td><%= singleRecord.earning_type %></td>
            </tr>
            <% }); %>
      </table>


